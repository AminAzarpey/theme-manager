{
  "name": "bootkit-theme-manager",
  "version": "1.0.0",
  "description": "A flexible theme and color system (light/dark, RTL, palettes) for web apps using JS, Sass, and Bootstrap",
  "main": "dist/core.js",
  "module": "dist/core.js",
  "style": "dist/theme-light.default.ltr.css",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate": "node src/js/generate-themes.cjs",

    "build:theme-light-default:ltr": "sass src/scss/generated/theme-light.default.scss dist/theme-light.default.ltr.css --style=compressed",
    "build:theme-light-default:rtl": "npm run build:theme-light-default:ltr && rtlcss dist/theme-light.default.ltr.css dist/theme-light.default.rtl.css",

    "build:theme-dark-default:ltr": "sass src/scss/generated/theme-dark.default.scss dist/theme-dark.default.ltr.css --style=compressed",
    "build:theme-dark-default:rtl": "npm run build:theme-dark-default:ltr && rtlcss dist/theme-dark.default.ltr.css dist/theme-dark.default.rtl.css",

    "build:themes": "npm run build:theme-light-default:rtl && npm run build:theme-dark-default:rtl",

    "build:js": "rollup -c",

    "build": "npm run generate && npm run build:themes && npm run build:js",
    "dev": "vite",
    "start": "vite preview",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "theme",
    "dark",
    "light",
    "rtl",
    "scss",
    "bootstrap",
    "cdn",
    "pwa",
    "color",
    "palette",
    "ng-bootstrap",
    "angular",
    "react"
  ],
  "author": "Amin Azarpey",
  "license": "MIT",
  "files": [
    "dist",
    "src/scss",
    "src/js",
    "README.md"
  ],
  "dependencies": {
    "bootstrap": "^5.3.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "rollup": "^4.0.0",
    "rtlcss": "^4.3.0",
    "sass": "^1.75.0",
    "vite": "^7.0.6"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/js/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/core.js"
    }
  }
}
